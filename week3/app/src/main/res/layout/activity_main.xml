<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/food_order"
        android:textAlignment="center"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/baseline_phone_24"
            android:onClick="phoneBtn"

            />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/baseline_add_link_24"
            android:onClick="searchBtn"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/textId2"
        android:layout_width="match_parent"
        android:layout_height="343dp"
        android:layout_margin="10dp"
        android:src="@drawable/img"
        android:contentDescription="@string/food_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="@string/food"  android:layout_width="30dp"
            tools:ignore="ButtonStyle"
            android:onClick="foodBtnClick"
            />


        <Button
            android:id="@+id/button2"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="@string/drink"  android:layout_width="30dp"
            tools:ignore="ButtonStyle"
            android:onClick="drinkBtnClick"
            />


        <Button
            android:id="@+id/button3"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="@string/vegtable"  android:layout_width="30dp"
            tools:ignore="ButtonStyle"
            android:onClick="VegtableBtnClick"
            />
    </LinearLayout>

</LinearLayout>